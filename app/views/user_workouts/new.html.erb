  <!-- Container to limit the width of the content and ensure responsiveness -->
  <div style="max-width: 600px; width: 100%;">
    
    <!-- Page header for the New Workout form, centered horizontally -->
    <h1 class="text-center">New Workout</h1>
    
    <!-- Render the reusable form partial for creating or editing workouts -->
    <%= render 'form', user_workout: @user_workout %>
    
  </div>
</div>
