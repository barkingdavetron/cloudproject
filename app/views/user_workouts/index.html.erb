<div class="container mt-4">
  <!-- Page Header -->
  <div class="d-flex justify-content-between align-items-center mb-3">
  
    <h1>Your Workouts</h1>
    <!-- create workout button -->
    <%= link_to "New Workout", new_user_workout_path, class: "btn btn-primary" %>
  </div>

  <!-- list of workouts -->
  <div class="list-group">
  <!-- loop through each workout belonging to the user -->
    <% @user_workouts.each do |workout| %>
      <div class="list-group-item">
        <!--  workout name and action buttons -->
        <div class="d-flex justify-content-between align-items-center">
          <!-- workout name as a clickable link -->
          <h5 class="mb-1"><%= link_to workout.name, user_workout_path(workout), class: "text-decoration-none" %></h5>
          <div>
            <!-- button to edit the workout -->
            <%= link_to "Edit", edit_user_workout_path(workout), class: "btn btn-sm btn-outline-secondary me-2" %>
            <!-- Button to delete the workout  -->
            <%= link_to "Delete", user_workout_path(workout), method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-sm btn-outline-danger" %>
          </div>
        </div>

        <!-- workout details -->
        <!-- descriptioon of the workout -->
        <p class="mb-1"><strong>Description:</strong> <%= workout.description || "No description provided" %></p>
        <!-- number of sets in the workout -->
        <p class="mb-1"><strong>Sets:</strong> <%= workout.sets %></p>
        <!-- number of reps in the workout -->
        <p class="mb-1"><strong>Reps:</strong> <%= workout.reps %></p>
        <!-- date of the workout -->
        <p class="mb-0"><strong>Date:</strong> <%= workout.date.strftime('%B %d, %Y') %></p>
      </div>
    <% end %>
  </div>
</div>
