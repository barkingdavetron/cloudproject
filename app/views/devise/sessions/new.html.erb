<h2 class="text-center">Log In</h2>

<!-- container for centering the login form -->
<div class="d-flex justify-content-center align-items-center vh-100">
  
  <!-- card container for the login form -->
  <!-- adds padding, width constraints, and a styled box layout -->
  <div class="card p-4" style="max-width: 400px; width: 100%;">

    <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: 'needs-validation' }) do |f| %>
      <!-- email field -->
      <div>
        <%= f.label :email, class: 'form-label' %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control', required: true %>
      </div>

      <!-- password field -->
      <div>
        <%= f.label :password, class: 'form-label' %>
        <%= f.password_field :password, autocomplete: "current-password", class: 'form-control', required: true %>
      </div>

      <% if devise_mapping.rememberable? %>
        <!-- remember me checkbox -->
        <div class="form-check">
          <%= f.check_box :remember_me, class: 'form-check-input', id: 'remember_me' %>
          <%= f.label :remember_me, class: 'form-check-label', for: 'remember_me' %>
        </div>
      <% end %>

      <!-- submit button -->
      <div class="d-grid">
        <%= f.submit "Log In", class: "btn btn-primary" %>
      </div>
    <% end %>

    <!-- additional links (e.g., forgot password, sign up) -->
    <div class="text-center">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
